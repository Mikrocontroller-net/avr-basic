# 
# Makefile fuer ubasic unter Linux
#
#

CC      = gcc
CFLAGS  = -Wall -g
CFLAGS  += -DUSE_AVR=0
CFLAGS  += -DACCESS_VIA_FILE=1
CFLAGS  += -DBREAK_NOT_EXIT=0
CFLAGS  += -DMAX_STRINGLEN=80

OBJ = file-ubasic.o ubasic.o tokenizer.o ubasic_call.o ubasic_cvars.o tokenizer_access.o
BIN = ubasic

ubasic: $(OBJ)
	$(CC) $(CFLAGS) -o $(BIN) $(OBJ) $(LDFLAGS)

%.o: %.c
	$(CC) $(CFLAGS) -c $<
	
	
.PHONY: clean
clean:
	rm -rf $(BIN) $(OBJ)

